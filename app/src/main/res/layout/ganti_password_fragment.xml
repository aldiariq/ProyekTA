<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="20dp"
    tools:context=".ui.gantipassword.GantiPasswordFragment">

    <TextView
        android:id="@+id/tv_ganti_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_ganti_password"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/etpasswordlamaGantipassword"
            android:hint="Password Lama"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp">
        </EditText>
        <EditText
            android:id="@+id/etpasswordbaru1Gantipassword"
            android:hint="Password Baru"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp">
        </EditText>
        <EditText
            android:id="@+id/etpasswordbaru2Gantipassword"
            android:hint="Ulangi Password Baru"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp">
        </EditText>
        <Button
            android:id="@+id/btnsimpanpasswordGantipassword"
            android:text="Simpan Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        </Button>
    </LinearLayout>

</LinearLayout>